<?xml version='1.0' encoding='UTF-8' ?>

<addon id='Page_Counter' xmlns="http://icplayer.com" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://icplayer.com ../../tools/addon.xsd">
	<model>
		<property name="Numericals" type="{Western Arabic,Eastern Arabic,Perso-Arabic}" nameLabel="Page_Counter_property_numericals"/>
		<property name="startFrom" type="string" nameLabel="Page_Counter_property_start_from"/>
		<property name="omittedPagesTexts" nameLabel="Page_Counter_property_omitted_pages_texts" type="list">
			<property name="pages" type="string" nameLabel="Page_Counter_property_pages"/>
			<property name="text" type="string" nameLabel="Page_Counter_property_text"/>
		</property>
		<property name="langAttribute" displayName="Lang attribute" nameLabel="Page_counter_property_lang_attribute" type="string" />
        <property name="speechTexts" displayName="Speech texts" nameLabel="Page_counter_property_speech_texts" type="staticlist">

            <property name="Page" nameLabel="Page_Counter_property_page" type="staticrow">
                <property name="Page" nameLabel="Page_Counter_property_page" type="string"/>
            </property>

            <property name="OutOf" nameLabel="Page_Counter_property_out_of" type="staticrow">
                <property name="OutOf" nameLabel="Page_Counter_property_out_of" type="string"/>
            </property>

        </property>
	</model>
</addon>